<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite verbose="1" name="MobilWorld Tests" parallel="methods">

    <parameter name="suiteOwner" value="akhivyk"/>
    <parameter name="jenkinsJobName" value="MobilWorld-WebTest"/>
    <parameter name="jenkinsJobType" value="web"/>
    <parameter name="jenkinsEnvironments" value="DEMO"/>

    <parameter name="jenkinsRegressionPipeline" value="Carina-Demo-Regression-Pipeline"/>
    <parameter name="jenkinsRegressionScheduling" value="*/5 * * * *" />
    <parameter name="jenkinsJobExecutionOrder" value="1"/>
    <parameter name="jenkinsJobExecutionMode" value="continue"/>
    <parameter name="jenkinsAutoScreenshot" value="true"/>

    <test name="MobilWorld Tests on Chrome">
        <parameter name="browser" value="Chrome"/>
        <classes>
            <class name="com.solvd.carina.demo.MobilWorldWebTest"/>
        </classes>
    </test>

    <test name="MobilWorld Tests on Firefox">
        <parameter name="browser" value="Firefox"/>
        <classes>
            <class name="com.solvd.carina.demo.MobilWorldWebTest"/>
        </classes>
    </test>

</suite>
